{
    "name": "DeepL automation",
    "version": "0.1",
    "description": "",
    "host_permissions": [
        "http://localhost/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "css": [],
        "js": []
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.deepl.com/translator*"
            ],
            "run_at": "document_end",
            "js": [
                "main.js"
            ]
        }
    ],
    "options_page": "options.html",
    "manifest_version": 3
}
